{% assign ph_v     = data.policyholder.entity.values %}
{% assign policy = data.policy %}
{% assign policy_c = data.policy.characteristics[0] %}
{% assign policy_v = policy_c.field_values %}
{% assign end_display = data.policy.effective_contract_end_timestamp | timestamp_millis_add: "day", -1 %}

<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="https://s3-eu-west-1.amazonaws.com/socotra-static-assets-temp/new-styles.css">
</head>

{% header %}
  <meta charset="UTF-8">
  <link rel="stylesheet" href="https://s3-eu-west-1.amazonaws.com/socotra-static-assets-temp/new-styles.css">
  <table width="100%">
    <tr>
      <td>
        <p class="header-contact">
          ACME Insurance Co.<br>
          101 Mission Street<br>
          San Francisco, CA<br>
          +1 415 555 5555<br>
          www.socotra.com
        </p>
      </td>
      <td>
        <svg width="35.658272mm" height="33.307178mm" viewBox="0 0 35.658273 33.307179" xmlns="http://www.w3.org/2000/svg" xmlns:svg="http://www.w3.org/2000/svg"><g transform="translate(-16.653589,-40.752316)"><rect style="fill:#1984db;fill-opacity:1;stroke-width:0.191785;stroke-dasharray:none" width="35.658272" height="33.307178" x="16.653589" y="40.752316" /><text xml:space="preserve" style="font-size:7px;font-family:Arial;fill:#ffffff;fill-opacity:1;stroke-width:0.265" x="17.437286" y="50.744465"><tspan x="17.437286" y="50.744465">Acme</tspan><tspan x="17.437286" y="60.44585">Insurance</tspan><tspan x="17.437286" y="70.14724">Co.</tspan></text></g></svg>
      </td>
    </tr>
  </table>
{% endheader %}

<h1>Term Life Insurance Policy Schedule</h1><br>

<h3>Insurance Details</h3>

<table class="table border-tops-only content">
  <tr>
    <td>Policyholder</td>
    <td>
      <b>ID:</b> {{data.policyholder.id}}<br>
      <b>Name:</b> {{ph_v.first_name}} {{ph_v.last_name}}<br>
      <b>Date of Birth:</b> {{ph_v.date_of_birth | timestamp_millis_print: "d MMM YYYY" }}<br>
    </td>
  </tr>
  <tr>
    <td>Policy</td>
    <td>
      <b>ID:</b> {{ policy.display_id}}<br>
      <b>Effective:</b> From {{ policy.original_contract_start_timestamp | timestamp_millis_print: "d MMM YYYY" }}
      through {{end_display | timestamp_millis_print: "d MMM YYYY" }}<br>
      <b>Sum Assured:</b> {{ policy.exposures[0].perils[0].characteristics[0].lump_sum_payment | format_number_currency: "en","US" }}<br>
      <b>Term:</b> Custom
    </td>
  </tr>
  <tr>
    <td>Total Premium</td>
    <td>{{ policy_c.gross_premium | format_number_currency: "en","US" }}</td>
  </tr>
</table>

<br>

<b>Authorized on</b> {{ policy.issued_timestamp | timestamp_millis_print: "d MMM YYYY" }}

{% footer %}
  <meta charset="UTF-8">
  <link rel="stylesheet" href="https://s3-eu-west-1.amazonaws.com/socotra-static-assets-temp/new-styles.css">
